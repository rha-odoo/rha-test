<?xml version="1.0"?>
<odoo>
    <data>
        <template id="report_delivery_document_inherit_sza" inherit_id="stock.report_delivery_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call='web.basic_layout'>
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>

                    <div class="page">
                        <div class="row">
                            <div class="col-6 text-center">
                                <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </div>
                            <div class="col-5 offset-1">
                                <h1><strong>Packing Slip</strong></h1>
                                <table class="table table-bordered table-sm text-center" style="border: 1px solid black;">
                                    <tr>
                                        <th>Date</th>
                                        <th>S.O No</th>
                                    </tr>
                                    <tr>
                                        <td><span t-field="o.date_done" t-options='{"format": "MM/dd/YYYY"}'/></td>
                                        <td><span t-field="o.origin"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div t-if="partner" class="col-6 offset-6" name="partner_header">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>Ship To</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div t-esc="partner" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <table class="table table-bordered table-sm text-center" style="width:70%" align="right">
                            <thead>
                                <tr>
                                    <th><strong>P.O. No.</strong></th>
                                    <th><strong>Sail Date</strong></th>
                                    <th><strong>Vessel Name</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td name="td_sched_date" width="20%">
                                        <span t-field="o.sale_id.client_order_ref"/>
                                    </td>
                                    <td>
                                       <span t-field="o.scheduled_date" t-options='{"format": "MM/dd/YYYY"}'/> 
                                    </td>
                                    <td>
                                        <span t-field="o.x_studio_vessel"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-bordered table-sm mt48">
                            <thead>
                                <tr>
                                    <th><strong>Item</strong></th>
                                    <th><strong>Description</strong></th>
                                    <th><strong>U/M</strong></th>
                                    <th class="text-right"><strong>Shipped</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                <tr t-foreach="lines" t-as="move">
                                    <td>
                                        <span t-field="move.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <!-- <p t-if="o.picking_type_code == 'outgoing'">
                                            <span t-field="move.product_id.sudo().description_pickingout"/>
                                        </p>
                                        <p t-if="o.picking_type_code == 'incoming'">
                                            <span t-field="move.product_id.sudo().description_pickingin"/>
                                        </p> -->
                                        <span t-field="move.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="move.product_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="move.product_uom_qty" t-options="{'widget': 'float', 'precision': 0}"/>
                                    </td>
                                </tr>
                                <tr t-foreach="range(0,5)" t-as="i">
                                    <td height="20px;"/><td/><td/><td/>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row" style="margin-top:25px;">
                            <div class="col-6">
                                <div>Total Boxes: ______________________________</div>
                                <div class="mt24">Total Pallets: ______________________________</div>
                            </div>
                            <div class="col-6">
                                <div>Signature: ______________________________</div>
                                <div class="mt24">Received Date: ______________________________</div>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
