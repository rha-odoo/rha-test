<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="quality_control.quality_alert_view_form" model="ir.ui.view">
  </record>

    <record id="quality_alert_view_form_inherit_jar" model="ir.ui.view">
        <field name="name">quality.alert.view.form.inherit.jar</field>
        <field name="inherit_id" ref="quality_control.quality_alert_view_form"/>
        <field name="model">quality.alert</field>
        <field name="priority">90</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='title']" position="after">
                <field name="x_customer" domain="[('customer_rank', '&gt;', 0)]"/>
                <field name="x_sale_order" domain="[('state','in', ['sale','done']), ('partner_id', '=', x_customer)]"/>
                <field name="x_customer_po_no"/>
            </xpath>
            <xpath expr="//field[@name='product_tmpl_id']" position="after">
                <field name="create_date"/>
                <xpath expr="//field[@name='user_id']" position="move"/>
            </xpath>
            <xpath expr="//field[@name='description']" position="after">
                <group name="group_one">
                    <field name="x_date" string="Date"/>
                    <field filename="x_description_file_filename" name="x_description_file" widget="binary"/>
                    <field name="x_description_file_filename" invisible="1"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='action_corrective']" position="after">
                <field name="x_field_goooF"/>
                <field filename="x_field_7JWcm_filename" name="x_field_7JWcm"/>
                <field invisible="1" name="x_field_7JWcm_filename"/>
            </xpath>
            <xpath expr="//field[@name='action_preventive']" position="after">
                <field name="x_field_Q7kR1"/>
                <field filename="x_field_hVONW_filename" name="x_field_hVONW"/>
                <field invisible="1" name="x_field_hVONW_filename"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page" position="after">
                <page name="page_interim_action" string="Interim Action">
                    <group name="group_interim_action">
                        <group name="group_interim_action_left">
                            <field name="x_completion_date" string="Completion Date"/>
                            <field name="x_scheduled_activity_date"/>
                            <field invisible="1" name="x_attachment_filename"/>
                            <field filename="x_attachment_filename" name="x_attachment"/>
                        </group>
                        <group name="group_interim_action_right"/>
                    </group>
                </page>
                <page name="page_root_cause" string="Root Cause">
                    <group name="group_root_cause">
                        <group name="group_root_cause_left">
                            <field name="x_root_cause_description" string="Root Cause Description"/>
                            <field name="x_date_2" string="Date"/>
                            <field name="x_scheduled_activity_date_1"/>
                            <field invisible="1" name="x_attachment_1_filename"/>
                            <field filename="x_attachment_1_filename" name="x_attachment_1" string="Attachment"/>
                        </group>
                        <group name="group_root_cause_right"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="page_claim" string="Claim">
                    <group name="claim_group">
                        <group name="claim_group_left">
                            <field name="x_product" invisible="1"/>
                            <field name="x_order_qty" string="Order Qty"/>
                            <field name="x_defect_qty" string="Defect Qty"/>
                            <field name="x_claim_accepted_date" string="Claim Accepted Date"/>
                            <field name="x_commited_delivery_date" string="Commited Delivery Date"/>
                        </group>
                        <group name="claim_group_right">
                            <field name="x_issue_description"/>
                            <field name="x_status"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>