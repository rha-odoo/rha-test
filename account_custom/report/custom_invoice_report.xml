<?xml version="1.0"?>
<odoo>
<data>
    <template id="report_invoice_document_sza" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call='web.basic_layout'>
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="header">
                    <t t-set="company" t-value="o.company_id if o.company_id else res_company"/>
                    <t t-if="not o.is_cruise_lines">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 85px;" alt="Logo"/>
                    </t>
                    <t t-if="o.is_cruise_lines">
                        <img t-if="company.logo_2" t-att-src="image_data_uri(company.logo_2)" style="max-height: 85px;" alt="Logo"/>
                    </t>
                </div>

                <div class="page">
                    <div class="row">
                        <div class="col-6">
                            <div  align="center" t-field="o.company_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </div>
                        <div class="col-5 offset-1">
                            <h1>
                                <strong>I n v o i c e</strong>
                            </h1>
                            <table class="table table-bordered table-sm" style="border: 1px solid black;">
                                <tr class="text-center">
                                    <th>Date</th>
                                    <th>Invoice #</th>
                                </tr>
                                <tr class="text-center">
                                    <td>
                                        <span t-field="o.invoice_date" t-options="{&quot;format&quot;: &quot;MM/dd/YYYY&quot;}"/>
                                    </td>
                                    <td>
                                        <span t-field="o.name"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Bill To</th>
                                </tr>
                                <tr >
                                    <td>
                                        <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-6">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Ship To</th>
                                </tr>
                                <tr>
                                    <td>
                                        <address t-field="o.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <table class="table table-bordered table-sm" style="width:70%" align="right">
                        <thead>
                            <tr align="center">
                                <th>
                                    <strong>P.O. Number</strong>
                                </th>
                                <th>
                                    <strong>Terms</strong>
                                </th>
                                <th>
                                    <strong>Due Date</strong>
                                </th>
                                <th>
                                    <strong>Vessel Name</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr align="center">
                                <td height="20px;">
                                    <span t-field="o.name"/>
                                </td>
                                <td>
                                    <span t-field="o.invoice_payment_term_id"/>
                                </td>
                                <td>
                                   <span t-field="o.invoice_date_due"/> 
                                </td>
                                <td>
                                    <t t-set="so_id" t-value="o.invoice_line_ids.mapped('sale_line_ids').mapped('order_id')"/>
                                    <span t-if="so_id" t-esc="so_id[0].x_studio_vessel.x_name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <table class="table table-bordered table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left">
                                    <span>Item Code</span>
                                </th>
                                <th class="text-left">
                                    <span>Description</span>
                                </th>
                                <th class="text-right">
                                    <span>Quantity</span>
                                </th>
                                <th class="text-right">
                                    <span>U/M</span>
                                </th>
                                <th class="text-left"><span>Taxes</span></th>
                                <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Price Each</span>
                                </th>
                                <th class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td>
                                            <span t-field="line.product_id.default_code"/>
                                        </td>
                                        <td name="account_invoice_line_name">
                                            <span t-field="line.product_id.name"/>
                                            <div>
                                                <span t-field="line.product_id.description_sale"/>
                                            </div>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.quantity" t-options="{'widget': 'float', 'precision': 0}"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_uom_id"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/></t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <tr t-foreach="range(0,5)" t-as="i">
                                <td height="20px;"></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                <tr>
                                    <t t-if="len(o.line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                        <td colspan="7" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span t-esc="amount_by_group[3]"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td colspan="7" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>
                                                <t t-esc="amount_by_group[4]"/>
                                            </span>
                                            <span t-esc="amount_by_group[3]"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                         
                            <tr style="border-top: 1px solid black !important;">
                                <td colspan="7" class="text-right">
                                    <span>Total :</span> <span class="text-right" t-field="o.amount_total"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="7" class="text-right">
                                    <span>Payments/Due : </span>
                                    <t t-set="payments_vals" t-value="o._get_reconciled_info_JSON_values()"/>
                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                        <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/><br/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="7" class="text-right">
                                    <span>Balance Due : </span>
                                    <span text-align="right" t-field="o.amount_residual"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </xpath>
    </template>
</data>
</odoo>

